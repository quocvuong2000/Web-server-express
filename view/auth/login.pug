extends ../layouts/common.pug

block content
    h1 Login 

    if errors 
        each error in errors 
            .alert.alert-danger= error

    form(action="/auth/login" method="post")
        d-flex.align-item.strech.justify-content-between
            label.form-label(for="email") Email 
            input.form-control#email(name="email" type="email" value= values?values.email:"") 
            label.form-label(for="password") password
            input.form-control#password(name="password" type="password" value= values?values.password:"") 
        button.btn.btn-primary.mt-2(type="submit") Submit